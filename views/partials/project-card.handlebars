<div class="col s12 m6">
  <div class="card medium">
    <div class="card-image waves-effect waves-block waves-light">
      <img
        src="https://github.com/{{owner.login}}/{{name}}/raw/main/assets/images/screenshot.PNG"
        class="activator"
      />

    </div>
    <div class="card-content">
      <span class="card-title activator">{{formatName name}}<i
          class="material-icons right"
        >more_vert</i></span>
    </div>
    <div class="card-action">
      <a href="{{homepage}}" target="_blank">Live Site</a>
      <a href="{{html_url}}" target="_blank">GitHub</a>
    </div>
    <div class="card-reveal">
      <span class="card-title">{{formatName name}}<i
          class="material-icons right"
        >close</i></span>
      <p>{{description}}</p>
      <p>Language: {{language}}</p>
    </div>
  </div>
</div>